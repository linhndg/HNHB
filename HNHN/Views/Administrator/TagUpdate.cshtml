@model HNHB.Models.Entities.Tag
@using (Html.BeginForm("TagUpdate", "Administrator"))
{
    <div class="modal-header">
        <button type="reset" class="close" onclick="$(this).resetValidation()">&times;</button>
        <h4 class="blue bigger">Tags</h4>
    </div>

    <div class="modal-body overflow-visible">
        <div class="row">
            <div class="col-xs-12">
                @Html.AntiForgeryToken()
                @Html.HiddenFor(modelItem => modelItem.Id)
                <div class="form-group">
                    <h5>@Html.ValidationSummary(true, "", new { @class = "text-danger col-xs-10 col-sm-10" })</h5>
                </div>
                <div class="form-group">
                    <label for="Name" class="col-sm-3">Tag<font class="text-danger">*</font></label>
                    <div class="col-sm-9">
                        <div class="clearfix">
                            @Html.EditorFor(m => m.Name)
                        </div>
                        <div class="help-block" for="Name">@Html.ValidationMessageFor(m => m.Name, "", new { @class = "text-danger" })</div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="modal-footer">
        <button class="btn btn-sm btn-primary" type="submit">
            <i class="icon-ok"></i>
            Lưu lại
        </button>
        <button class="btn btn-sm btn-danger" type="reset" onclick="$(this).resetValidation()">
            <i class="icon-remove"></i>
            Hủy bỏ
        </button>
    </div>
}